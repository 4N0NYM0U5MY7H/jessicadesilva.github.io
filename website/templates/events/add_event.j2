{%- extends "base.j2" -%}

{%- from "macros/_eventform.j2" import render_event_form -%}

{%- block page_title -%}Add Event{%- endblock -%}

{%- block content -%}
<section>
    <header class="major">
        <h1 class="h2">Add New Event</h1>
    </header>
    <form id="event_form" method="POST" action="{{ url_for('events.add_event') }}">
        <div class="row gtr-uniform">
            {{ render_event_form(form)}}
            <div class="col-12">
                <ul class="actions">
                    <li><input id="submit" class="primary" name="submit" type="submit" value="Add event"></li>
                    <li><a href="{{ url_for('events.future_events') }}" class="button">Cancel</a></li>
                </ul>
            </div>
        </div>
    </form>
</section>
{%- endblock -%}
