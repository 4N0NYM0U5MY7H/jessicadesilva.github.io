{% extends "layout/base.j2" -%}
{%- block title %}Past Events{% endblock -%}
{%- block main_content %}
<section>
    <header class="major">
        <h1 class="h2">Past Events</h1>
    </header>
    {%- if data %}
    <div class="table-wrapper">
        <table>
            <thead>
                <tr>
                    {%- for key, value in data[0].items() -%}
                    {%- if key != "ID" %}
                    <th>{{ key }}</th>
                    {%- endif -%}
                    {%- endfor %}
                </tr>
            </thead>
            <tbody>
                {%- for row in data %}
                <tr {% if row.ID %}id="{{ row.ID }}" {%- endif %}>
                    {%- for key, value in row.items() %}
                    {%- if key != "ID" %}
                    <td>{{ value }}</td>
                    {%- endif -%}
                    {%- endfor %}
                </tr>
                {%- endfor %}
            </tbody>
            {%- if updated %}
            <tfoot>
                <tr>
                    <td colspan="2"></td>
                    <td>Updated on {{ updated }}.</td>
                </tr>
            </tfoot>
            {%- endif %}
        </table>
    </div>
    {%- endif %}
</section>
{% endblock -%}