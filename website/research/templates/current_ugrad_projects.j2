{% extends "layout/base.j2" %}
{% block title %}Current Undergraduate Projects{% endblock %}
{% block main_content %}
<section>
    <header class="major">
        <h2>Current Undergraduate Projects</h2>
    </header>
    <div class="posts">

        {% if project_names %}
        {% for project in project_names %}
        {% include "projects/{}.j2".format(project) %}
        {% endfor %}
        {% endif %}

    </div>
</section>
{% endblock %}